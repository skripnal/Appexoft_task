{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@service/*": ["service/*"],
      "@store/*": ["store/*"],
      "@types/*": ["types/*"],
      "@/*": ["*"]
    },
    "verbatimModuleSyntax": false
  },
  "include": ["src", "**/*.test.ts", "**/*.test.tsx"]
}
